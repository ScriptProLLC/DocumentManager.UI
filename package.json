{
  "name": "document-manager-ui",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "pdfjs-dist": "^2.0.943",
    "react-scripts": "2.1.8",
    "bootstrap": "^4.3.1",
    "reactstrap": "^7.1.0",
    "font-awesome": "^4.7.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "run-p lint rs-build",
    "rs-build": "react-scripts build",
    "test": "react-scripts test",
    "prestart:api": "node tools/createMockDb.js",
    "test-once": "react-scripts test --no-watch --reporters=default --reporters=jest-junit",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "lint": "run-p lint-js lint-css",
    "lint-js": "eslint src/**/* cypress/integration/**/* tools/**/*",
    "lint-css": "stylelint src/**/*.css",
    "full-test": "run-p test-once cy:run",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "jest-junit": {
    "outputDirectory": "./test-results",
    "outputName": "./jest.xml"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@storybook/addon-actions": "^5.0.5",
    "@storybook/addon-info": "^5.0.5",
    "@storybook/addon-knobs": "^5.0.5",
    "@storybook/addon-links": "^5.0.5",
    "@storybook/addons": "^5.0.5",
    "@storybook/react": "^5.0.5",
    "babel-loader": "^8.0.5",
    "cypress": "^3.2.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-cypress": "^2.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "jest-dom": "^3.1.3",
    "jest-junit": "^6.3.0",
    "json-server": "^0.14.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "react-testing-library": "^6.0.3",
    "stylelint": "^9.10.1"
  }
}
